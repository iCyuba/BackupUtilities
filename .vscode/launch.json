{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch: BackupUtilities Client",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Client/bin/Debug/net8.0/Client.dll",
            "args": [
                "--once",
                "--config",
                "${workspaceFolder}/.config/config.json"
            ]
        },

        {
            "name": ".NET Core Launch: BackupUtilities Config Editor",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Config/bin/Debug/net8.0/Config.dll"
        }
    ]
}
